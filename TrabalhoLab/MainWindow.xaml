<Window x:Class="TrabalhoLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TrabalhoLab.ViewModels"
        Title="Menu Principal" Height="400" Width="300"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainMenuViewModel />
    </Window.DataContext>

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Menu Professor" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>

        <Button Content="Gerir Alunos" Command="{Binding AbrirAlunosCommand}" Margin="0 5"/>
        <Button Content="Gerir Grupos" Command="{Binding AbrirGruposCommand}" Margin="0 5"/>
        <Button Content="Gerir Tarefas" Command="{Binding AbrirTarefasCommand}" Margin="0 5"/>
        <Button Content="Avaliar Tarefas" Command="{Binding AbrirAvaliacoesCommand}" Margin="0 5"/>
        <Button Content="Ver Pauta" Command="{Binding AbrirPautaCommand}" Margin="0 5"/>
        <Button Content="Perfil do Utilizador" Command="{Binding AbrirPerfilCommand}" Margin="0 5"/>
    </StackPanel>
</Window>
