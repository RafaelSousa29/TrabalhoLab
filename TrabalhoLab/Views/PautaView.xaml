<Window x:Class="TrabalhoLab.Views.PautaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TrabalhoLab.ViewModels"
        Title="Pauta Final" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:PautaViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding AlunosNotas}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Número" Binding="{Binding NumeroAluno}" Width="*"/>
                <DataGridTextColumn Header="Grupo" Binding="{Binding GrupoNome}" Width="*"/>
                <DataGridTextColumn Header="Nota Final" Binding="{Binding NotaFinal, StringFormat=N2}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Exportar para Excel" Command="{Binding ExportarExcelCommand}" />
        </StackPanel>
    </Grid>
</Window>
