<Window x:Class="TrabalhoLab.Views.AvaliacaoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TrabalhoLab.ViewModels"
        Title="Avaliação de Tarefas" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:AvaliacaoViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0"
                  ItemsSource="{Binding Grupos}"
                  SelectedItem="{Binding GrupoSelecionado}"
                  DisplayMemberPath="Nome"
                  Margin="0 0 0 10" />

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding AvaliacoesGrupoSelecionado}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tarefa ID" Binding="{Binding TarefaId}" Width="100"/>
                <DataGridTextColumn Header="Nota" Binding="{Binding Nota}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Guardar" Command="{Binding GuardarCommand}" HorizontalAlignment="Right"/>
    </Grid>
</Window>
