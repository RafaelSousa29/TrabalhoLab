<Window x:Class="TrabalhoLab.Views.AlunoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TrabalhoLab.ViewModels"
        Title="Gestão de Alunos" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:AlunoViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Pesquisar por número:" Margin="0 0 0 2"/>
            <TextBox Text="{Binding NumeroPesquisa, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding AlunosFiltrados}"
                  SelectedItem="{Binding AlunoSelecionado, Mode=TwoWay}"
                  AutoGenerateColumns="False" CanUserAddRows="False" Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Número" Binding="{Binding Numero}" Width="*"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Adicionar" Command="{Binding AdicionarCommand}" Margin="0 0 10 0"/>
            <Button Content="Remover" Command="{Binding RemoverCommand}" Margin="0 0 10 0"/>
            <Button Content="Guardar" Command="{Binding GuardarCommand}" />
        </StackPanel>
    </Grid>
</Window>
