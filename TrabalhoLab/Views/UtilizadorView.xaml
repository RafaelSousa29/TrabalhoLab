<Window x:Class="TrabalhoLab.Views.UtilizadorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TrabalhoLab.ViewModels"
        Title="Perfil do Utilizador"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.DataContext>
        <vm:UtilizadorViewModel />
    </Window.DataContext>

    <Border CornerRadius="10"
            Background="White"
            Padding="20"
            Margin="10"
            BorderBrush="#483D8B"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <Border Background="#483D8B"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0 0 0 20"
                    Grid.Row="0">
                <TextBlock Text="Perfil do Utilizador"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Imagem -->
            <Image Grid.Row="1"
                   Width="100" Height="100"
                   Source="{Binding Utilizador.CaminhoFoto}"
                   Margin="0 0 0 10"
                   HorizontalAlignment="Left"/>

            <!-- Botão de foto -->
            <Button Grid.Row="2"
                    Content="Selecionar Foto"
                    Command="{Binding SelecionarFotoCommand}"
                    Margin="0 10 0 20"
                    Style="{StaticResource MenuButtonStyle}"
                    Width="160"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>

            <!-- Nome -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        Margin="0 0 0 10"
                        HorizontalAlignment="Left">
                <TextBlock Text="Nome:" Width="80" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Utilizador.Nome, UpdateSourceTrigger=PropertyChanged}"
                         Width="200"
                         Padding="5"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- Email -->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        Margin="0 0 0 10"
                        HorizontalAlignment="Left">
                <TextBlock Text="Email:" Width="80" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Utilizador.Email, UpdateSourceTrigger=PropertyChanged}"
                         Width="200"
                         Padding="5"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- Botões -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 10 0 0">
                <Button Content="Guardar"
                        Command="{Binding GuardarCommand}"
                        Style="{StaticResource MenuButtonStyle}"
                        Width="100"
                        Margin="0 0 10 0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
                <Button Content="Entrar"
                        Command="{Binding EntrarCommand}"
                        Style="{StaticResource MenuButtonStyle}"
                        Width="100"
                        Margin="0 0 10 0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>