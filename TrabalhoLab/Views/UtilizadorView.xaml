<Window x:Class="TrabalhoLab.Views.UtilizadorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TrabalhoLab.ViewModels"
        Title="Perfil do Utilizador" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:UtilizadorViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0"
               Width="100" Height="100"
               Source="{Binding Utilizador.CaminhoFoto}"
               Margin="0 0 0 10"
               HorizontalAlignment="Left"/>

        <Button Grid.Row="1" Content="Selecionar Foto"
                Command="{Binding SelecionarFotoCommand}"
                Margin="0 0 0 10" Width="120"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Nome:" Width="80" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Utilizador.Nome, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Email:" Width="80" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Utilizador.Email, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Button Content="Guardar" Command="{Binding GuardarCommand}" Width="90" Height="30" Margin="0 0 10 0"/>
            <Button Content="Entrar" Command="{Binding EntrarCommand}" Width="90" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
